{
  "name": "DBBS NEURON simulator configuration v3.1",
  "output": {
    "format": "scaffold.output.HDF5Formatter",
    "morphology_repository": "morphologies.hdf5",
    "file": "neuron.hdf5"
  },
  "network_architecture": {
    "simulation_volume_x": 50.0,
    "simulation_volume_z": 50.0,
    "store_kd_trees": true,
    "store_compound_kd_tree": true,
    "store_pf_kd_trees": true
  },
  "layers": {
    "granular_layer": {
      "thickness": 150.0,
      "stack": {
        "stack_id": 0,
        "position_in_stack": 0,
        "position": [0.0, 0.0, 0.0]
      }
    },
    "purkinje_layer": {
      "thickness": 30.0,
      "stack": {
        "stack_id": 0,
        "position_in_stack": 1
      }
    },
    "molecular_layer": {
      "thickness": 150.0,
      "stack": {
        "stack_id": 0,
        "position_in_stack": 2
      }
    }
  },
  "cell_types": {
    "granule_cell": {
      "placement": {
        "class": "scaffold.placement.ParticlePlacement",
        "layer": "granular_layer",
        "soma_radius": 2.5,
        "density": 3.9e-3,
        "distance_multiplier_min": 0.5,
        "distance_multiplier_max": 0.5
      },
      "morphology": {
        "class": "scaffold.morphologies.GranuleCellGeometry",
        "pf_height": 180,
        "pf_height_sd": 20,
        "pf_length": 3000,
        "pf_radius": 0.5,
        "dendrite_length": 40,
        "detailed_morphologies": {
          "names": ["GranuleCell"]
        }
      },
      "plotting": {
        "display_name": "granule cell",
        "color": "#E62214"
      }
    },
    "glomerulus": {
      "relay": true,
      "placement": {
        "class": "scaffold.placement.ParticlePlacement",
        "layer": "granular_layer",
        "soma_radius": 1.5,
        "density": 3e-4
      },
      "morphology": {
        "class": "scaffold.morphologies.NoGeometry"
      },
      "plotting": {
        "display_name": "glomerulus",
        "color": "#0E1030"
      }
    },
    "golgi_cell": {
      "placement": {
        "class": "scaffold.placement.ParticlePlacement",
        "layer": "granular_layer",
        "soma_radius": 8.0,
        "density": 9e-6
      },
      "morphology": {
        "class": "scaffold.morphologies.GolgiCellGeometry",
        "dendrite_radius": 50.0,
        "axon_x": 150.0,
        "axon_y": 150.0,
        "axon_z": 30.0,
        "detailed_morphologies": {
          "names": ["GolgiCell"]
        }
      },
      "plotting": {
        "display_name": "golgi cell",
        "color": "#332EBC"
      }
    },
    "purkinje_cell": {
      "placement": {
        "class": "scaffold.placement.ParallelArrayPlacement",
        "layer": "purkinje_layer",
        "soma_radius": 7.5,
        "planar_density": 0.0017,
        "extension_x": 130.0,
        "extension_z": 3.5,
        "angle": 70
      },
      "morphology": {
        "class": "scaffold.morphologies.PurkinjeCellGeometry",
        "detailed_morphologies": {
          "names": ["PurkinjeCell"]
        }
      },
      "plotting": {
        "display_name": "Purkinje cell",
        "color": "#0F8944"
      }
    },
    "stellate_cell": {
      "placement": {
        "class": "scaffold.placement.ParticlePlacement",
        "layer": "molecular_layer",
        "soma_radius": 4.0,
        "density": 0.5e-4,
        "y_restriction": [0.33, 1.00]
      },
      "morphology": {
        "class": "scaffold.morphologies.RadialGeometry",
        "dendrite_radius": 15.0,
        "detailed_morphologies": {
          "names": ["StellateCell"]
        }
      },
      "plotting": {
        "display_name": "Stellate cell",
        "color": "#FFC425"
      }
    },
    "basket_cell": {
      "placement": {
        "class": "scaffold.placement.ParticlePlacement",
        "layer": "molecular_layer",
        "soma_radius": 6.0,
        "density": 0.5e-4,
        "y_restriction": [0.00, 0.33]
      },
      "morphology": {
        "class": "scaffold.morphologies.RadialGeometry",
        "dendrite_radius": 15.0,
        "detailed_morphologies": {
          "names": ["StellateCell"]
        }
      },
      "plotting": {
        "display_name": "Basket cell",
        "color": "#F37735"
      }
    },
    "mossy_fibers": {
      "entity": true,
      "relay": true,
      "placement": {
        "class": "scaffold.placement.Entities",
        "layer": "granular_layer",
        "placement_relative_to": "glomerulus",
        "placement_count_ratio": 0.05
      }
    }
  },
  "after_placement": {
    "microzones": {
      "class": "scaffold.postprocessing.LabelMicrozones",
      "targets": ["purkinje_cell"]
    },
    "aa_lengths": {
      "class": "scaffold.postprocessing.AscendingAxonLengths"
    }
  },
  "connection_types": {
    "mossy_to_glomerulus": {
      "class": "scaffold.connectivity.ConnectomeMossyGlomerulus",
      "from_cell_types": [{"type": "mossy_fibers", "compartments": ["soma"]}],
      "to_cell_types": [{"type": "glomerulus", "compartments": ["soma"]}]
    },
    "glomerulus_to_granule": {
      "class": "scaffold.connectivity.ConnectomeGlomerulusGranule",
      "from_cell_types": [{"type": "glomerulus", "compartments": ["soma"]}],
      "to_cell_types": [{"type": "granule_cell", "compartments": ["dendrites"]}],
      "divergence": 50,
      "convergence": 4
    },
    "golgi_to_glomerulus": {
      "class": "scaffold.connectivity.ConnectomeGolgiGlomerulus",
      "from_cell_types": [{"type": "golgi_cell", "compartments": ["axon"]}],
      "to_cell_types": [{"type": "glomerulus", "compartments": ["soma"]}],
      "divergence": 40,
      "convergence": 4
    },
    "glomerulus_to_golgi": {
      "class": "scaffold.connectivity.ConnectomeGlomerulusGolgi",
      "from_cell_types": [{"type": "glomerulus", "compartments": ["soma"]}],
      "to_cell_types": [{"type": "golgi_cell", "compartments": ["dendrites"]}],
      "divergence": 2,
      "convergence": 65
    },
    "golgi_gap_junctions": {
      "class": "scaffold.connectivity.ConnectomeGapJunctionsGolgi",
      "from_cell_types": [{"type": "golgi_cell", "compartments": ["axon"]}],
      "to_cell_types": [{"type": "golgi_cell", "compartments": ["dendrites"]}]
    },
    "granule_to_golgi": {
      "class": "scaffold.connectivity.VoxelIntersection",
      "from_cell_types": [{"type": "granule_cell", "compartments": ["parallel_fiber", "ascending_axon"]}],
      "to_cell_types": [{"type": "golgi_cell", "compartments": ["dendrites"]}]
    },
    "ascending_axon_to_purkinje": {
      "class": "scaffold.connectivity.ConnectomeAscAxonPurkinje",
      "from_cell_types": [{"type": "granule_cell", "compartments": ["ascending_axon"]}],
      "to_cell_types": [{"type": "purkinje_cell", "compartments": ["dendrites"]}]
    },
    "parallel_fiber_to_purkinje": {
      "class": "scaffold.connectivity.VoxelIntersection",
      "from_cell_types": [{"type": "granule_cell", "compartments": ["parallel_fiber"]}],
      "to_cell_types": [{"type": "purkinje_cell", "compartments": ["dendrites"]}]
    },
    "parallel_fiber_to_basket": {
      "class": "scaffold.connectivity.VoxelIntersection",
      "from_cell_types": [{"type": "granule_cell", "compartments": ["parallel_fiber"]}],
      "to_cell_types": [{"type": "basket_cell", "compartments": ["dendrites"]}],
      "after": ["granule_to_golgi"]
    },
    "parallel_fiber_to_stellate": {
      "class": "scaffold.connectivity.VoxelIntersection",
      "from_cell_types": [{"type": "granule_cell", "compartments": ["parallel_fiber"]}],
      "to_cell_types": [{"type": "stellate_cell", "compartments": ["dendrites"]}],
      "after": ["granule_to_golgi"]
    },
    "stellate_to_purkinje": {
      "class": "scaffold.connectivity.VoxelIntersection",
      "from_cell_types": [{"type": "stellate_cell", "compartments": ["axon"]}],
      "to_cell_types": [{"type": "purkinje_cell", "compartments": ["dendrites"]}]
    },
    "basket_to_purkinje": {
      "class": "scaffold.connectivity.VoxelIntersection",
      "from_cell_types": [{"type": "basket_cell", "compartments": ["axon"]}],
      "to_cell_types": [{"type": "purkinje_cell", "compartments": ["soma"]}]
    },
    "stellate_to_stellate": {
      "class": "scaffold.connectivity.ConnectomeGapJunctions",
      "from_cell_types": [{"type": "stellate_cell", "compartments": ["axon"]}],
      "to_cell_types": [{"type": "stellate_cell", "compartments": ["dendrites"]}],
      "divergence": 4,
      "limit_xy": 150.0,
      "limit_z": 50.0
    },
    "basket_to_basket": {
      "class": "scaffold.connectivity.ConnectomeGapJunctions",
      "from_cell_types": [{"type": "basket_cell", "compartments": ["axon"]}],
      "to_cell_types": [{"type": "basket_cell", "compartments": ["dendrites"]}],
      "divergence": 4,
      "limit_xy": 150.0,
      "limit_z": 50.0
    }
  },
  "after_connectivity": {
    "relay_spoof": {
      "class": "scaffold.postprocessing.SpoofGlomerulusGranuleDetailed"
    }
  },
  "simulations": {
    "poc": {
      "simulator": "neuron",
      "duration": 500,
      "temperature": 25,
      "resolution": 0.1,
      "record_soma": true,
      "cell_models": {
        "glomerulus": { },
        "mossy_fibers": { },
        "granule_cell": {
          "model": "dbbs_models.GranuleCell",
          "record_soma": true,
          "record_spikes": true
        },
        "golgi_cell": {
          "model": "dbbs_models.GolgiCell",
          "record_soma": true,
          "record_spikes": true
        },
        "purkinje_cell": {
          "model": "dbbs_models.PurkinjeCell",
          "record_soma": true,
          "record_spikes": true
        },
        "stellate_cell": {
          "model": "dbbs_models.StellateCell",
          "record_soma": true,
          "record_spikes": true
        },
        "basket_cell": {
          "model": "dbbs_models.StellateCell",
          "record_soma": true,
          "record_spikes": true
        }
      },
      "connection_models": {
        "glomerulus_to_granule": {
          "synapse": "AMPA"
        },
        "mossy_to_glomerulus": {
          "synapse": null
        },
        "granule_to_golgi": {
          "synapse": "AMPA"
        },
        "parallel_fiber_to_purkinje": {
          "synapse": "AMPA_PF"
        },
        "parallel_fiber_to_basket": {
          "synapse": "AMPA"
        },
        "parallel_fiber_to_stellate": {
          "synapse": "AMPA"
        }
      },
      "devices": {
        "mossy_fiber_input": {
          "io": "input",
          "device": "spike_generator",
          "targetting": "cell_type",
          "cell_types": ["mossy_fibers"],
          "synapses": ["AMPA", "NMDA"],
          "parameters": {
            "noise": true,
            "start": 100,
            "interval": 25,
            "number": 4
          }
        },
        "dendrite_recorders": {
          "io": "output",
          "device": "voltage_recorder",
          "group": "dendrites",
          "targetting": "representatives",
          "section_type": "dendrites"
        }
      }
    }
  }
}
